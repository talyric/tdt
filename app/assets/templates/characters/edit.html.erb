<form name="editCharacter">
  <fieldset>
    <legend>
      Edit Character
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="character[name]"
                   ng-model="character.name"
                   class="text_field"
                   required>
          <span ng-show="editCharacter.name.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Career
        </label>
        <div class="controls">
            <input type="text"
                   name="character[career]"
                   ng-model="character.career"
                   class="text_field"
                   required>
          <span ng-show="editCharacter.career.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Age
        </label>
        <div class="controls">
            <input type="number"
                   name="character[age]"
                   ng-model="character.age"
                   class="number_field"
                   required>
          <span ng-show="editCharacter.age.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
