        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Int
        </label>
        <div class="controls">
            <input type="number"
                   name="character[int]"
                   ng-model="character.int"
                   class="number_field"
                   required>
          <span ng-show="editCharacter.int.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Con
        </label>
